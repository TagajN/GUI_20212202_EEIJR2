<UserControl x:Class="Game.WindowUC.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.WindowUC"
             xmlns:vms="clr-namespace:Game.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Art/Background.webp"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Grid.Row="1">
            <Button Command="{Binding NewGameCommand}" Padding="10" Margin="10" Background="Gray" >
                <Button.Content>
                    <Image  Height="22" Width="163" Source="/Art/NEWGAME_button.png" />
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Command="{Binding LoadGameCommand}" Padding="10" Margin="10" Background="Gray">
                <Button.Content>
                    <Image  Height="22" Width="163" Source="/Art/LOAD_button.png"  />
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Command="{Binding LeaderBoardsCommand}" Padding="10" Margin="10" Background="Gray">
                <Button.Content>
                    <Image  Height="22" Width="163" Source="/Art/HIGHSCORES_button.png" />
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Command="{Binding CreditsCommand}" Padding="10" Margin="10" Background="Gray">
                <Button.Content>
                    <Image  Height="22" Width="163" Source="/Art/CREDITS_button.png" />
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Command="{Binding ExitCommand}" Padding="10" Margin="10" Background="Gray">
                <Button.Content>
                    <Image  Height="22" Width="163" Source="/Art/EXIT_button.png"  />
                </Button.Content>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        <Image Height="100" Width="700" Source="/Art/title.png" />
        <Button Content="{Binding MuteButton}" FontSize="22" Command="{Binding MuteCommand}" Background="Gray" Grid.Row="1" HorizontalAlignment="Left" Margin="10,0,0,10" Height="37" Width="40" VerticalAlignment="Bottom" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</UserControl>
