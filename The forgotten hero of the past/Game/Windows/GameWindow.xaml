<Window x:Class="Game.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game.Windows"
        xmlns:vms ="clr-namespace:Game.ViewModels"
        xmlns:Renderer ="clr-namespace:Game.Renderer;assembly=Game.Renderer"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"  Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" KeyDown="Window_KeyDown">
    <Window.DataContext>
        <vms:GameViewModel/>
    </Window.DataContext>

    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Renderer:Display x:Name="display"/>

        <StackPanel Grid.Row="0">
            <WrapPanel Margin="5">
                <Button Content="Hero" Command="{Binding CharacterStats}" Width="80"/>
                <ProgressBar x:Name="HealthBar" Maximum="100" Value="80" Width="100" Height="20" Padding="10" Margin="5"/>
                <Label x:Name="CoinCounter" Content="1000" Padding="10"/>
            </WrapPanel>
        </StackPanel>

        
    </Grid>
    
</Window>
