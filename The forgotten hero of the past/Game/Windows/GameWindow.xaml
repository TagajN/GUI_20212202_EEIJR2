<Window x:Class="Game.Windows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game.Windows"
        xmlns:vms ="clr-namespace:Game.ViewModels"
        xmlns:Renderer ="clr-namespace:Game.Renderer;assembly=Game.Renderer"
        mc:Ignorable="d"
        Title="GameWindow" Height="668" Width="1200"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Window.DataContext>
        <vms:GameViewModel/>
    </Window.DataContext>
    <StackPanel>
        <Border BorderBrush="SaddleBrown" BorderThickness="3" >
            <WrapPanel Width="1200" HorizontalAlignment="Left" Background="SaddleBrown">
                <Button Click="Button_Click" Background="BurlyWood">
                    <Image Source="/Art/HEROUPGRADE_title.png" HorizontalAlignment="Center" Width="100" Height="40"/>
                </Button>
                <ProgressBar x:Name="HealthBar" Maximum="100" Value="80" Width="100" Height="20" Padding="10" Margin="5"/>
                <Label x:Name="CoinCounter" Content="1000" Padding="10"/>
            </WrapPanel>
        </Border>
        <Grid x:Name="grid">
            <Renderer:Display x:Name="display"/>
        </Grid>
    </StackPanel>
</Window>
