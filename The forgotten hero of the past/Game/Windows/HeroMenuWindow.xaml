<Window x:Class="Game.Windows.HeroMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game.Windows"
        mc:Ignorable="d"
        Title="HeroMenu" Height="280" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <Label Content="Hero Upgrades" HorizontalAlignment="Center"/>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Label Content="Health" Margin="5"/>
                <Label Content="Speed" Margin="5"/>
                <Label Content="Damage" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <ProgressBar Maximum="5" Value="3" Height="20" Margin="10"/>
                <ProgressBar Maximum="5" Value="2" Height="20" Margin="10"/>
                <ProgressBar Maximum="5" Value="5" Height="20" Margin="10"/>
            </StackPanel>
        </Grid>
        <Button Content="Back" Click="Button_Click" Padding="10" Margin="20" Width="200"/>
    </StackPanel>
</Window>
